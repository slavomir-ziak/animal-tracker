<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wecode.animaltracker.activity.detail.HabitatDetailActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/toolbar"
        android:fillViewport="false"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">


        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/outerLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/animal_tracker_row_height"
                android:layout_gravity="center_horizontal"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/habitatTypeSpinnerLabel"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:text="Type"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <Spinner
                    android:id="@+id/habitatTypeValue"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:spinnerMode="dialog" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/animal_tracker_row_height"
                android:layout_gravity="center_horizontal"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/habitatTrackSpinnerLabel"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:text="Track"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <Spinner
                    android:id="@+id/habitatTrackValue"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:spinnerMode="dialog" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/forestAgeContainer"
                android:layout_width="match_parent"
                android:layout_height="@dimen/animal_tracker_row_height"
                android:layout_gravity="center_horizontal"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/forestAgeLabel"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:text="Forest age"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <Spinner
                    android:id="@+id/habitatForestAgeValue"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:spinnerMode="dialog" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/habitatTreeTypeContainer"
                android:layout_width="match_parent"
                android:layout_height="@dimen/animal_tracker_row_height"
                android:layout_gravity="center_horizontal"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/habitatTreeTypeLabel"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:text="Tree type"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <Spinner
                    android:id="@+id/habitatTreeTypeValue"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:spinnerMode="dialog" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/habitatForestTypeContainer"
                android:layout_width="match_parent"
                android:layout_height="@dimen/animal_tracker_row_height"
                android:layout_gravity="center_horizontal"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/habitatForestTypeLabel"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:text="Forest Type"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <Spinner
                    android:id="@+id/habitatForestTypeValue"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:spinnerMode="dialog" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
