<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="com.wecode.animaltracker.activity.detail.TransectFindingDetailActivity"
    android:animateLayoutChanges="true">
    <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:id="@+id/scrollView"
            android:fillViewport="false" android:layout_below="@+id/toolbar" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
        android:animateLayoutChanges="true">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:animateLayoutChanges="true">


            <LinearLayout
                android:id="@+id/outerLinearLayout"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:animateLayoutChanges="true">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_alignTop="@+id/scrollView"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true">

                    <TextView
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Species"
                        android:id="@+id/findingSpeciesLabel"
                        android:layout_gravity="center_vertical" />

                    <Spinner
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/findingSpeciesValue"
                        android:gravity="left|center_vertical"
                        android:layout_gravity="center_vertical"
                        android:spinnerMode="dialog" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_alignTop="@+id/scrollView"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:weightSum="1">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="110dp"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="Location"
                            android:id="@+id/findingLocationLabel"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="5dp" />

                        <Button
                            style="?android:attr/buttonStyleSmall"
                            android:layout_width="27dp"
                            android:layout_height="27dp"
                            android:id="@+id/findingEditLocationButton"
                            android:background="@drawable/ic_edit"
                            android:layout_gravity="center_vertical|right"
                            android:onClick="editLocation" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:id="@+id/findingLocationValue"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dp" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <TextView
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Count"
                        android:id="@+id/findingCountLabel"
                        android:layout_gravity="center_vertical" />

                    <EditText
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:ems="10"
                        android:id="@+id/findingCountValue"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="3dp" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical">

                    <TextView android:layout_width="110dp" android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium" android:text="Direction"
                        android:id="@+id/footprintsDirectionLabel"/>

                    <Spinner
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/footprintsDirectionValue" android:spinnerMode="dialog"
                        android:gravity="center_vertical" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <TextView android:layout_width="110dp" android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium" android:text="Age"
                        android:id="@+id/footprintsAgeLabel"/>

                    <EditText android:layout_width="fill_parent" android:layout_height="wrap_content"
                        android:id="@+id/footprintsAgeValue"
                        android:inputType="number"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="3dp" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <TextView android:layout_width="110dp" android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium" android:text="Stride"
                        android:id="@+id/footprintsStrideLabel"
                         />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/footprintsStrideValue" android:layout_alignBottom="@+id/footprintsStrideLabel"
                        android:layout_alignLeft="@+id/footprintsAgeValue" android:layout_alignStart="@+id/footprintsAgeValue"
                        android:inputType="number"
                        android:layout_marginLeft="3dp" />
                </LinearLayout>

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:rowCount="4"
                    android:columnCount="4">

                    <TextView
                        android:layout_width="110dp"
                        android:layout_height="50dp"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Size"
                        android:id="@+id/textView26"
                        android:layout_row="0"
                        android:layout_column="0"
                        android:gravity="center_vertical" />

                    <TextView
                        android:layout_width="110dp"
                        android:layout_height="50dp"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Front"
                        android:id="@+id/textView11"
                        android:layout_row="0"
                        android:layout_column="1"
                        android:gravity="bottom|center_horizontal"
                        android:layout_gravity="bottom" />

                    <TextView
                        android:layout_width="110dp"
                        android:layout_height="50dp"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Back"
                        android:id="@+id/textView25"
                        android:layout_row="0"
                        android:layout_column="2"
                        android:gravity="bottom|center_horizontal"
                        android:layout_gravity="bottom" />

                    <TextView
                        android:layout_width="110dp"
                        android:layout_height="50dp"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Length"
                        android:id="@+id/textView10"
                        android:layout_row="1"
                        android:layout_column="0"
                        android:gravity="center_vertical|right"
                        android:elegantTextHeight="false" />

                    <EditText
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:ems="10"
                        android:id="@+id/editText"
                        android:layout_row="1"
                        android:layout_column="1"
                        android:layout_gravity="center" />

                    <EditText
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:ems="10"
                        android:id="@+id/editText3"
                        android:layout_row="1"
                        android:layout_column="2"
                        android:layout_gravity="center" />

                    <TextView
                        android:layout_width="110dp"
                        android:layout_height="50dp"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Width"
                        android:id="@+id/textView12"
                        android:layout_row="3"
                        android:layout_column="0"
                        android:gravity="center_vertical|right" />

                    <EditText
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:ems="10"
                        android:id="@+id/editText2"
                        android:layout_row="3"
                        android:layout_column="1"
                        android:layout_gravity="center" />

                    <EditText
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:ems="10"
                        android:id="@+id/editText4"
                        android:layout_row="3"
                        android:layout_column="2"
                        android:layout_gravity="center" />
                </GridLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical">

                    <Switch
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Feces"
                        android:id="@+id/findingFecesSwitcher"
                        android:checked="false"
                        android:onClick="toggleFecesView" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/findingsFecesView"
                    android:visibility="gone">

                    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:tools="http://schemas.android.com/tools"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        tools:context="com.wecode.animaltracker.FecesFragment">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="Feces prey"
                            android:id="@+id/findingFecesPreyLabel" android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true" android:paddingTop="24dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="Feces state"
                            android:id="@+id/findingFecesStateLabel" android:layout_below="@+id/findingFecesPreyLabel"
                            android:layout_alignParentLeft="true" android:layout_alignParentStart="true" android:paddingTop="24dp"/>
                        <Spinner
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/findingFecesStateValue"
                            android:gravity="bottom"
                            android:spinnerMode="dialog"
                            android:layout_alignTop="@+id/findingFecesStateLabel"
                            android:layout_toRightOf="@+id/findingFecesStateLabel"
                            android:layout_toEndOf="@+id/findingFecesStateLabel" android:paddingTop="24dp"
                            android:layout_alignBottom="@+id/findingFecesStateLabel"/>
                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/findingFecesPreyValue" android:layout_above="@+id/findingFecesStateLabel"
                            android:layout_toRightOf="@+id/findingFecesPreyLabel"
                            android:layout_alignRight="@+id/findingFecesStateValue"
                            android:layout_alignEnd="@+id/findingFecesStateValue"/>
                    </RelativeLayout>


                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical">

                    <Switch
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Other"
                        android:id="@+id/findingOtherSwitch"
                        android:checked="false"
                        android:onClick="toggleOtherView" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/findingsOtherVIew"
                    android:visibility="gone">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_alignTop="@+id/scrollView"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" >

                        <TextView
                            android:layout_width="110dp"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="Confidence"
                            android:id="@+id/findingConfidenceLabel"
                            android:layout_gravity="center_vertical" />

                        <Spinner
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/findingConfidenceValue"
                            android:gravity="left|center_vertical"
                            android:layout_gravity="center_vertical"
                            android:spinnerMode="dialog" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="center_vertical">

                        <RadioGroup
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_gravity="center_vertical">

                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Before first snow"
                                android:id="@+id/findingBeforeRecentSnow"
                                android:checked="false" />

                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="After first snow"
                                android:id="@+id/findingAfterRecentSnow"
                                android:checked="false" />
                        </RadioGroup>
                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>

            <!-- this RelativeLayout really must stay here -->
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
