<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent" >

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RouteName"
            android:id="@+id/transectListItemRouteName"
            style="@style/list_item_detail_text"
            android:layout_below="@+id/transectId"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" android:layout_toLeftOf="@+id/transectListItemEndDateTime"
            android:layout_toStartOf="@+id/transectListItemEndDateTime"/>
    <TextView style="@style/list_item_detail_text" android:layout_width="wrap_content"
              android:layout_height="wrap_content"
        android:id="@+id/transectListItemStartDateTime"
              android:layout_alignParentTop="true" android:layout_alignParentRight="true"
              android:layout_alignParentEnd="true"/>
    <TextView style="@style/list_item_detail_text" android:layout_width="wrap_content"
              android:layout_height="wrap_content"
        android:id="@+id/transectListItemEndDateTime"
              android:layout_below="@+id/transectListItemStartDateTime" android:layout_alignParentRight="true"
              android:layout_alignParentEnd="true"/>
    <TextView style="@style/list_item_detail_text" android:layout_width="wrap_content"
              android:layout_height="wrap_content" android:text="1" android:id="@+id/transectId"
              android:layout_alignParentTop="true" android:layout_toRightOf="@+id/textView"
              android:layout_toEndOf="@+id/textView"/>
    <TextView style="@style/list_item_detail_text" android:layout_width="wrap_content"
              android:layout_height="wrap_content" android:text="Column:" android:id="@+id/transectListItemColumnLabel"
              android:layout_alignParentTop="true" android:layout_toRightOf="@+id/transectId"
              android:layout_toEndOf="@+id/transectId"/>
    <TextView style="@style/list_item_detail_text" android:layout_width="wrap_content"
              android:layout_height="wrap_content" android:text="1" android:id="@+id/transectListItemColumn"
              android:layout_alignParentTop="true" android:layout_toRightOf="@+id/transectListItemColumnLabel"
              android:layout_toEndOf="@+id/transectListItemColumnLabel"/>
    <TextView style="@style/list_item_detail_text" android:layout_width="wrap_content"
              android:layout_height="wrap_content" android:text="Number:" android:id="@+id/textView"
              android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
              android:layout_alignParentStart="true"/>
</RelativeLayout>