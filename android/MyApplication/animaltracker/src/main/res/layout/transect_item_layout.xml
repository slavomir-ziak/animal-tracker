<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/transectListItemRouteName"
        style="@style/list_item_detail_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/transectId"
        android:layout_toLeftOf="@+id/transectListItemEndDateTime"
        android:layout_toStartOf="@+id/transectListItemEndDateTime"
        android:text="@string/routename" />

    <TextView
        android:id="@+id/transectListItemStartDateTime"
        style="@style/list_item_detail_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/transectListItemEndDateTime"
        style="@style/list_item_detail_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/transectListItemStartDateTime" />

    <TextView
        android:id="@+id/transectId"
        style="@style/list_item_detail_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/textView"
        android:layout_toRightOf="@+id/textView"
        android:text="1" />

    <TextView
        android:id="@+id/transectListItemColumnLabel"
        style="@style/list_item_detail_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/transectId"
        android:layout_toRightOf="@+id/transectId"
        android:text="@string/square" />

    <TextView
        android:id="@+id/transectListItemColumn"
        style="@style/list_item_detail_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/transectListItemColumnLabel"
        android:layout_toRightOf="@+id/transectListItemColumnLabel"
        android:text="1" />

    <TextView
        android:id="@+id/textView"
        style="@style/list_item_detail_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="@string/number" />
</RelativeLayout>