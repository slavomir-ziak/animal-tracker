<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".fragment.TransectFindingSamplesListFragment">

    <Button
        android:id="@+id/add_samples"
        android:layout_width="@dimen/animal_tracker_main_button_width"
        android:layout_height="@dimen/animal_tracker_main_button_height"
        android:layout_gravity="center_horizontal"
        android:onClick="addSample"
        android:text="@string/transect_finding_action_add_sample" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/transectFindingDetailSamplesListView" />

</LinearLayout>
