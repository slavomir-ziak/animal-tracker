<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".activity.location.EditLocationDMSFormatActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <GridLayout
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="10"
        android:id="@+id/d"
        android:orientation="horizontal"
        android:foregroundGravity="top"
        android:rowCount="7"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_below="@+id/toolbar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <EditText
            android:layout_width="65dp"
            android:layout_height="45dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editLocationLatitudeDegreesValue"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_gravity="center|end"
            android:gravity="end" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/latitude"
            android:id="@+id/editLocationLatitudeLabel"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnSpan="10" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="°"
            android:id="@+id/textView4"
            android:layout_row="1"
            android:layout_column="1" />

        <EditText
            android:layout_width="65dp"
            android:layout_height="45dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editLocationLatitudeMinutesValue"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_gravity="center|end"
            android:gravity="end" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="&apos;"
            android:id="@+id/textView5"
            android:layout_row="1"
            android:layout_column="3" />

        <EditText
            android:layout_width="65dp"
            android:layout_height="45dp"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/editLocationLatitudeSecondsValue"
            android:layout_row="1"
            android:layout_column="4"
            android:layout_gravity="center|end"
            android:gravity="end" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="&quot;"
            android:id="@+id/textView6"
            android:layout_row="1"
            android:layout_column="5" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editLocationLatitudeDirectionSpinner"
            android:layout_row="1"
            android:layout_column="7"
            android:spinnerMode="dialog"
            android:gravity="top|bottom"
            android:layout_gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/longitude"
            android:id="@+id/textView2"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_columnSpan="10"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="°"
            android:id="@+id/textView7"
            android:layout_row="3"
            android:layout_column="1" />

        <EditText
            android:layout_width="65dp"
            android:layout_height="45dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editLocationLongitudeMinutesValue"
            android:layout_row="3"
            android:layout_column="2"
            android:layout_gravity="center|end"
            android:gravity="end" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="&apos;"
            android:id="@+id/textView8"
            android:layout_row="3"
            android:layout_column="3"
            android:gravity="top" />

        <EditText
            android:layout_width="65dp"
            android:layout_height="45dp"
            android:ems="10"
            android:id="@+id/editLocationLongitudeSecondsValue"
            android:layout_row="3"
            android:layout_column="4"
            android:layout_gravity="center|end"
            android:gravity="end"
            android:inputType="numberDecimal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="&quot;"
            android:id="@+id/textView9"
            android:layout_row="3"
            android:layout_column="5" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editLocationLongitudeDirectionSpinner"
            android:layout_row="3"
            android:layout_column="7"
            android:spinnerMode="dialog"
            android:gravity="top|bottom"
            android:layout_gravity="center" />

        <TextView
            android:text="@string/elevation"
            android:layout_row="5"
            android:layout_column="0"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/textView37"
            android:layout_gravity="center_vertical" />

        <EditText
            android:layout_width="68dp"
            android:layout_height="45dp"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/editLocationElevationDecimal"
            android:layout_row="6"
            android:layout_column="0"
            android:layout_gravity="end" />

        <EditText
            android:layout_width="65dp"
            android:layout_height="45dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editLocationLongitudeDegreesValue"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_gravity="center|end"
            android:gravity="end" />

    </GridLayout>

</RelativeLayout>
