<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="com.wecode.animaltracker.activity.TransectDetail"
                android:id="@+id/activityTransectDetail">
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/scrollView" android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" android:fillViewport="false">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:tools="http://schemas.android.com/tools"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Transect number"
                    android:id="@+id/transectNumberLabel" android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" android:paddingTop="15dp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="1"
                    android:id="@+id/transectNumber"
                    android:layout_alignParentTop="true" android:layout_centerHorizontal="true"
                    android:paddingTop="15dp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Start date and time"
                    android:id="@+id/textView"
                    android:layout_below="@+id/textView6" android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" android:paddingTop="15dp"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:textAppearance="?android:attr/textAppearanceMedium" android:text="End date and time"
                      android:id="@+id/textView2"
                      android:layout_alignParentStart="true"
                      android:layout_below="@+id/textView" android:layout_alignParentLeft="true"
                      android:paddingTop="15dp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Start location"
                    android:id="@+id/textView3"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/textView2" android:layout_alignParentLeft="true"
                    android:paddingTop="15dp"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:textAppearance="?android:attr/textAppearanceMedium" android:text="End location"
                      android:id="@+id/textView4"
                      android:layout_below="@+id/textView11" android:layout_alignParentLeft="true"
                      android:layout_alignParentStart="true" android:paddingTop="15dp"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:textAppearance="?android:attr/textAppearanceMedium" android:text="Transect route"
                      android:id="@+id/textView5"
                      android:layout_below="@+id/transectNumberLabel"
                      android:paddingTop="20dp"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:textAppearance="?android:attr/textAppearanceMedium" android:text="Column in grid"
                      android:id="@+id/textView6" android:layout_below="@+id/textView5"
                      android:layout_alignParentLeft="true"
                      android:layout_alignParentStart="true" android:paddingTop="20dp"/>
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Weather"
                    android:id="@+id/button"
                    android:layout_below="@+id/textView4" android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" android:layout_marginTop="17dp"
                    android:onClick="setWeather"/>
            <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Habitat"
                    android:id="@+id/button2"
                    android:layout_alignTop="@+id/button" android:layout_toRightOf="@+id/button"
                    android:layout_toEndOf="@+id/button" android:onClick="setHabitat"/>
            <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="Start transect"
                    android:id="@+id/button3"
                    android:layout_below="@+id/button" android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"/>
            <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="End transect"
                    android:id="@+id/button4"
                    android:layout_below="@+id/button2" android:layout_toRightOf="@+id/button3"
                    android:layout_toEndOf="@+id/button3"/>
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="findings"
                    android:id="@+id/button5"
                    android:layout_alignTop="@+id/button2" android:layout_toRightOf="@+id/button2"
                    android:layout_toEndOf="@+id/button2" android:onClick="viewFindings"/>
            <EditText android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:textAppearance="?android:attr/textAppearanceMedium"
                      android:id="@+id/transectColumnValue"
                      android:layout_below="@+id/textView5"
                      android:paddingTop="15dp" android:layout_alignRight="@+id/transectRouteValue"
                      android:layout_alignEnd="@+id/transectRouteValue" android:layout_above="@+id/textView"
                      android:layout_alignLeft="@+id/transectRouteValue"
                      android:layout_alignStart="@+id/transectRouteValue" android:inputType="number"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:textAppearance="?android:attr/textAppearanceMedium" android:text="7.10.2015 5:31:11"
                      android:id="@+id/textView9"
                      android:paddingTop="15dp" android:layout_below="@+id/transectColumnValue"
                      android:layout_alignLeft="@+id/transectColumnValue"
                      android:layout_alignStart="@+id/transectColumnValue"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:textAppearance="?android:attr/textAppearanceMedium" android:text="7.10.2015 15:31:11"
                      android:id="@+id/textView10"
                      android:layout_below="@+id/textView9" android:layout_alignLeft="@+id/textView9"
                      android:layout_alignStart="@+id/textView9" android:paddingTop="15dp"
                      android:layout_alignBottom="@+id/textView2"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:textAppearance="?android:attr/textAppearanceSmall" android:text="49.008544, 19.295393    "
                      android:id="@+id/textView11"
                      android:layout_below="@+id/textView10" android:layout_alignLeft="@+id/textView10"
                      android:layout_alignStart="@+id/textView10" android:paddingTop="15dp"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:textAppearance="?android:attr/textAppearanceSmall" android:text="49.4124124, 19.124134"
                      android:id="@+id/textView12"
                      android:layout_alignTop="@+id/textView4" android:layout_alignLeft="@+id/textView11"
                      android:layout_alignStart="@+id/textView11" android:paddingTop="15dp"
                      android:layout_alignBottom="@+id/textView4"/>
            <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="add finding"
                    android:id="@+id/button6"
                    android:layout_alignTop="@+id/button5" android:layout_toRightOf="@+id/button4"
                    android:layout_toEndOf="@+id/button4" android:onClick="addFinding"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/transectRouteValue"
                    android:layout_below="@+id/transectNumber" android:layout_alignLeft="@+id/transectNumber"
                    android:layout_alignStart="@+id/transectNumber" android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_above="@+id/transectColumnValue"/>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
