<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.detail.findings.TransectFindingFootprintsDetailActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/toolbar"
        android:animateLayoutChanges="true"
        android:fillViewport="false"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/animal_tracker_row_height"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/findingCountLabel"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="Number of animals"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <EditText
                    android:id="@+id/findingCountValue"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="3dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="number" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/animal_tracker_row_height"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/footprintsDirectionLabel"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:text="Direction"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <Spinner
                    android:id="@+id/footprintsDirectionValue"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:spinnerMode="dialog" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/animal_tracker_row_height"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/footprintsStrideLabel"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:text="Stride"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <EditText
                    android:id="@+id/footprintsStrideValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:inputType="numberDecimal" />
            </LinearLayout>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="4"
                android:rowCount="4">

                <TextView
                    android:id="@+id/textView26"
                    android:layout_width="110dp"
                    android:layout_height="40dp"
                    android:layout_column="0"
                    android:layout_row="0"
                    android:gravity="center_vertical"
                    android:text="Size"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="110dp"
                    android:layout_height="40dp"
                    android:layout_column="1"
                    android:layout_gravity="bottom"
                    android:layout_row="0"
                    android:gravity="bottom|center_horizontal"
                    android:text="Front"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <TextView
                    android:id="@+id/textView25"
                    android:layout_width="110dp"
                    android:layout_height="40dp"
                    android:layout_column="2"
                    android:layout_gravity="bottom"
                    android:layout_row="0"
                    android:gravity="bottom|center_horizontal"
                    android:text="Back"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="110dp"
                    android:layout_height="50dp"
                    android:layout_column="0"
                    android:layout_row="1"
                    android:elegantTextHeight="false"
                    android:gravity="center_vertical|right"
                    android:text="Length"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <EditText
                    android:id="@+id/footprintsFrontLengthValue"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_gravity="center"
                    android:layout_row="1"
                    android:ems="10"
                    android:inputType="number|numberDecimal"
                    android:numeric="decimal" />

                <EditText
                    android:id="@+id/footprintsBackLengthValue"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:layout_gravity="center"
                    android:layout_row="1"
                    android:ems="10"
                    android:inputType="number|numberDecimal"
                    android:numeric="decimal" />

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="110dp"
                    android:layout_height="50dp"
                    android:layout_column="0"
                    android:layout_row="3"
                    android:gravity="center_vertical|right"
                    android:text="Width"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <EditText
                    android:id="@+id/footprintsFrontWidthValue"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_gravity="center"
                    android:layout_row="3"
                    android:ems="10"
                    android:inputType="number|numberDecimal"
                    android:numeric="decimal" />

                <EditText
                    android:id="@+id/footprintsBackWidthValue"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:layout_gravity="center"
                    android:layout_row="3"
                    android:ems="10"
                    android:inputType="number|numberDecimal"
                    android:numeric="decimal" />
            </GridLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/substractLabel"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:text="Substract"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_gravity="center_vertical" />

                <Spinner
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/substract"
                    android:layout_weight="1"
                    android:spinnerMode="dialog"
                    android:layout_gravity="center_vertical" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/animal_tracker_row_height"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/findingConfidenceLabel"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="Confidence"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <Spinner
                    android:id="@+id/findingConfidenceValue"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="left|center_vertical"
                    android:spinnerMode="dialog" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/animal_tracker_row_height"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/footprintsAgeLabel"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:text="Age"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <Spinner
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/age"
                    android:layout_weight="1"
                    android:spinnerMode="dialog" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
