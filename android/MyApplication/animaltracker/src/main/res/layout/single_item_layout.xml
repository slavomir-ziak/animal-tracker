<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent" >
        <ImageView
                android:id="@+id/img"
                android:layout_width="50dp"
                android:layout_height="50dp"/>

        <TextView
                android:id="@+id/txt"
                android:layout_width="wrap_content"
                android:layout_height="50dp" android:text="text"
                android:gravity="center_vertical"
                android:layout_alignParentTop="true" android:layout_toRightOf="@+id/transectListItemRouteName"
                android:layout_toEndOf="@+id/transectListItemRouteName"/>
        <TextView android:id="@+id/transectListItemRouteName" android:layout_width="wrap_content" android:layout_height="50dp"
                  android:text="id" android:gravity="center_vertical"
                  android:layout_alignParentTop="true" android:layout_toRightOf="@+id/img"
                  android:layout_toEndOf="@+id/img"/>

</RelativeLayout>