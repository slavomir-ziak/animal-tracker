<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.wecode.animaltracker.FecesFragment">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Feces prey"
            android:id="@+id/findingFecesPreyLabel" android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" android:paddingTop="24dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Feces state"
            android:id="@+id/findingFecesStateLabel" android:layout_below="@+id/findingFecesPreyLabel"
            android:layout_alignParentLeft="true" android:layout_alignParentStart="true" android:paddingTop="24dp"/>
    <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/findingFecesStateValue"
            android:gravity="bottom"
            android:spinnerMode="dialog"
            android:layout_alignTop="@+id/findingFecesStateLabel"
            android:layout_toRightOf="@+id/findingFecesStateLabel"
            android:layout_toEndOf="@+id/findingFecesStateLabel" android:paddingTop="24dp"
            android:layout_alignBottom="@+id/findingFecesStateLabel"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/findingFecesPreyValue" android:layout_above="@+id/findingFecesStateLabel"
            android:layout_toRightOf="@+id/findingFecesPreyLabel"
            android:layout_alignRight="@+id/findingFecesStateValue"
            android:layout_alignEnd="@+id/findingFecesStateValue"/>
</RelativeLayout>
